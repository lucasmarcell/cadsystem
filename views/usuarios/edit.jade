extends ../layout

block content
	h1 Editar #{value.nome}
	hr
	br
	form(name="cadCliente", action="/usuarios/edit/#{value._id}", method="POST")
		input(type="hidden" name="_method" value="put")
		div(class="form-group")
			label Nome:
			input(type="text", name="nome", class="form-control" id="inputDefault", value="#{value.nome}")
			br
			label Login:
			input(type="text", name="login", class="form-control", value="#{value.login}")
			br
			br
			input(type="submit", value="Atualizar", class="btn btn-primary")
			&nbsp
			a(href="/usuarios" title="Cancelar", class="btn btn-danger") Cancelar
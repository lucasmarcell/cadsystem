extends ../layout

block content
	div(class="container row")
		div(class="col-lg-8")
			div(id="chat")
				ul
			div(id="chat-text-box")
				form(role="form" id="form-enviar-mensagem")
					div(class="form-group")
						input(type="text" class="form-control" id="mensagem" placeholder="O que você está pensando?")
						br
						button(type="submit" class="btn btn-default") Enviar

		div(class="col-lg-4")
			form(role="form" id="form-alterar-nome")
				div(class="form-group")
					label(for="nome") 
						h4 Alterar Nome
					input(type="text" class="form-control" id="nome" placeholder="Informe seu novo Nome")
					br
					button(type="submit" class="btn btn-default") Alterar
			br
			h3 Updates
				h5(id="updates")